page {
    height: auto;
}

.nav-bar {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #ffda44;
    font-size: 32rpx;
    color: #333;
    display: flex;
    justify-content: space-around;
}

.nav-bar .nav-item {
    width: 200rpx;
    text-align: center;
    background-color: transparent;
}

.nav-bar .nav-item text {
    opacity: 0.5;
}

.nav-bar .nav-item.active {
    border-bottom: 4rpx solid #333;
}

.nav-bar .nav-item.active text {
    opacity: 1;
}

.textarea {
    box-sizing: border-box;
    position: relative;
    width: 690rpx;
    height: 220rpx;
    margin: 30rpx auto;
    padding: 20rpx;
    font-size: 32rpx;
    line-height: 44rpx;
    border-radius: 10rpx;
}

.textarea textarea {
    width: 100%;
    height: 130rpx;
}

.output {
    height: auto;
    min-height: 220rpx;
}

.r-icon {
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    width: 40rpx;
    height: 40rpx;
    padding: 10rpx;
}

.r-icon image {
    width: 100%;
    height: 100%;
}

.input .count {
    position: absolute;
    left: 20rpx;
    bottom: 20rpx;
    color: #ccc;
}

.btns {
    width: 690rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    background-color: transparent;
}

.btn {
    width: 210rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    color: #333;
    text-align: center;
    font-size: 28rpx;
    position: relative;
}

.btn image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.btn text {
    vertical-align: middle;
    padding-left: 11rpx;
}

.btn-share {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0;
}