page {
    height: auto;
}

.input {
    box-sizing: border-box;
    position: relative;
    width: 690rpx;
    height: 470rpx;
    margin: 30rpx auto;
    padding: 20rpx;
    font-size: 32rpx;
    line-height: 44rpx;
    border-radius: 10rpx;
}

.input textarea {
    width: 100%;
    height: 80%;
}

.r-icon {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 1;
}

.r-icon image {
    width: 100%;
    height: 100%;
}

.btns {
    width: 690rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    background-color: transparent;
}

.btn {
    width: 210rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    color: #333;
    text-align: center;
    font-size: 28rpx;
    position: relative;
}

.btn image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.btn text {
    vertical-align: middle;
    padding-left: 11rpx;
}

.btn-share {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0;
}