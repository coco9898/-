page view {
    background-color: rgba(0,0,0,0);
}

.userinfo {
    display: flex;
    padding: 296rpx 120rpx 16rpx;
    position: relative;
}

.userinfo image {
    width: 54rpx;
    height: 54rpx;
    border-radius: 216rpx;
    display: inline-block;
    margin-right: 10rpx;
}

.userinfo .nick {
    flex: 1;
    height: 60rpx;
    line-height: 68rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 35rpx;
    color: #fff;
    letter-spacing: 2rpx;
}

.pic-wrap {
    position: relative;
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
}

.loading {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 140rpx;
    height: 140rpx;
}

.pic {
    width: 100%;
    height: 710rpx;
    margin: 0;
}

.btn-wrap {
    position: fixed;
    bottom: 60rpx;
    left: 60rpx;
    display: flex;
    justify-content: space-between;
    width: 624rpx;
    height: 88rpx;
    margin: 0 auto;
}

.little-btn-wrap {
    display: flex;
    position: absolute;
    bottom: 94rpx;
}

.report-wrap {
    padding-top: 50rpx;
    width: 500rpx;
    text-align: right;
}

.save-wrap {
    padding-top: 50rpx;
    width: 100%;
    text-align: left;
}

.report {
    display: inline-block;
    font-size: 28rpx;
    color: #999;
    text-align: center;
    line-height: 41rpx;
    width: 150rpx;
    height: 39rpx;
    background: url('data:image/png;base64,') no-repeat;
    background-size: 36rpx 36rpx;
    background-position: 0 0;
    padding-left: 28rpx;
}

.save {
    background: url('data:image/png;base64,') no-repeat;
    background-size: 36rpx 36rpx;
    background-position: 0 0;
    margin-left: 30rpx;
    width: 250rpx;
}

.change-wrap {
    position: fixed;
    bottom: 70rpx;
    width: 100%;
    height: 750rpx;
    z-index: 2;
}

.create {
    padding: 20rpx;
    box-sizing: border-box;
    position: relative;
}

.btns-big {
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
}

.home {
    width: 88rpx;
    height: 100%;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
    background-color: #fff;
}

.home image {
    width: 40rpx;
    height: 40rpx;
}

.create-too {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffda44;
    border-radius: 10rpx;
}

.create-too image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 22rpx;
}

.create-too text {
    font-size: 32rpx;
    color: #333;
}

.guide-wrap {
    width: 567rpx;
    position: absolute;
    left: 80rpx;
    top: 130rpx;
    display: flex;
    justify-content: center;
}

.guide {
    display: flex;
    justify-content: center;
}

.guide text {
    margin-right: 14rpx;
    color: #888;
    font-size: 30rpx;
    max-width: 526rpx;
}

.guide image {
    width: 40rpx;
    height: 35rpx;
}