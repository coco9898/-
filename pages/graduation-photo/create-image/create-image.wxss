.image-wrap {
    width: 100%;
    height: 626rpx;
    overflow: hidden;
    position: relative;
}

.image-area {
    width: 404rpx;
    height: 606rpx;
    margin: 10rpx auto 0;
    position: relative;
}

.image-area image {
    position: absolute;
    width: 100%;
    height: 100%;
}

.info,.info .gender,.info .select,.info .name {
    display: flex;
}

.info {
    height: 108rpx;
    line-height: 108rpx;
    background-color: transparent;
    position: absolute;
    bottom: 0;
    left: 20rpx;
    right: 20rpx;
    z-index: 100;
    align-items: center;
}

.info view {
    background-color: transparent;
}

.gender {
    flex: 1;
}

.gender .select {
    width: 112rpx;
    height: 44rpx;
    margin: auto 0;
    line-height: 44rpx;
    border-radius: 10rpx;
    overflow: hidden;
    color: #333;
    font-size: 28rpx;
    margin-left: 10rpx;
    border: 4rpx solid #1e1e1e;
}

.select .select-item {
    flex: 1;
    text-align: center;
    background-color: #fff;
    color: #ccc;
}

.select .select-item.active {
    background-color: #1e1e1e;
    color: #fff;
    opacity: 1;
}

.checkbox-save {
    width: 170rpx;
    height: 42rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #1e1e1e;
}

.checkbox-save text {
    vertical-align: middle;
}

checkbox .wx-checkbox-input {
    width: 32rpx;
    height: 32rpx;
    border: 4rpx solid #1e1e1e;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 40rpx;
    height: 30rpx;
    text-align: center;
    line-height: 30rpx;
    font-size: 40rpx;
    background: transparent;
    transform: translate(-35%,-50%) scale(1);
}

.name input {
    width: 152rpx;
    height: 44rpx;
    line-height: 44rpx;
    margin: auto 0 auto 0;
    background-color: #fff;
    font-size: 28rpx;
    padding-left: 10rpx;
    border-radius: 10rpx;
    border: 4rpx solid #1e1e1e;
    color: #1e1e1e;
}

.bt-wrap {
    background-color: transparent;
    position: absolute;
    top: 626rpx;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    width: 100%;
    min-height: 556rpx;
}

.select-styles {
    background-color: transparent;
    width: 100%;
}

.select-type {
    white-space: nowrap;
    height: 100rpx;
}

.select-type .type {
    background-color: transparent;
    display: inline-block;
    width: 100rpx;
    height: 96rpx;
    text-align: center;
    padding: 4rpx 0;
    color: #aaa;
}

.select-type .type.active {
    border-top: 4rpx solid #ffda44;
    background-color: #fff;
    color: #333;
}

.select-type .type .icon {
    width: 52rpx;
    height: 52rpx;
}

.select-type .type .content {
    font-size: 24rpx;
    display: block;
    line-height: 24rpx;
}

.styles-wrap {
    font-size: 0;
    width: 100%;
    height: 320rpx;
    min-height: 320rpx;
    background-color: #fff;
    overflow: hidden;
    flex: 1;
}

.styles-wrap .style-item {
    display: inline-block;
    width: 142rpx;
    height: 142rpx;
    background-color: #f7f7f7;
    margin: 8rpx 15rpx;
    text-align: center;
    border-radius: 10rpx;
    border: 4rpx solid transparent;
}

.style-item.active {
    border-color: #ffda44;
}

.styles-wrap .style-item image {
    width: 100%;
    height: 100%;
    margin: auto;
}

.btn-wrap {
    width: 100%;
    height: 122rpx;
    background-color: #f7f7f7;
    position: relative;
}

.btn {
    width: 710rpx;
    height: 88rpx;
    border-radius: 16rpx;
    margin: 10rpx auto 0;
    background-color: #ffda44;
    line-height: 88rpx;
    text-align: center;
    font-size: 32rpx;
    color: #333;
    z-index: 1;
    position: relative;
    box-shadow: 1rpx 14rpx #ffb944;
}

.btn image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.btn text {
    padding-left: 20rpx;
    vertical-align: middle;
}