page {
    background-color: #F2F2F2;
}

.entrance-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 20rpx 30rpx;
    background: #ffda44;
}

.entrance-header-item {
    box-sizing: border-box;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
    background: #fff;
}

.entrance-header-item+.entrance-header-item {
    margin-left: 20rpx;
}

.entrance-header-icon {
    margin-right: 12rpx;
    width: 36rpx;
    height: 36rpx;
}

.wrap {
    width: 100%;
    padding: 132rpx 20rpx 20rpx;
    box-sizing: border-box;
    background-color: #F2F2F2;
}

.area {
    width: 100%;
    height: 476rpx;
    border-radius: 10rpx;
    border: 4rpx dashed #bbb;
    background-color: #E6E6E6;
    padding-top: 282rpx;
    text-align: center;
    font-size: 32rpx;
    color: #AAAAAA;
    position: relative;
    box-sizing: border-box;
}

.cross {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 150rpx;
    width: 92rpx;
    height: 92rpx;
    background-color: transparent;
}

.cross view {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background-color: #bbb;
}

.cross .row {
    width: 92rpx;
    height: 16rpx;
}

.cross .col {
    width: 16rpx;
    height: 92rpx;
}

.btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    background-color: #FFDA44;
    text-align: center;
    line-height: 96rpx;
    font-size: 32rpx;
    color: #333;
}

.photo {
    width: 100%;
    margin-bottom: 20rpx;
    font-size: 0;
}

.photo image {
    width: 100%;
    height: 476rpx;
    border: 6rpx solid #fff;
    box-sizing: border-box;
}

.photo view {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #4A4A4A;
    margin-top: 10rpx;
}