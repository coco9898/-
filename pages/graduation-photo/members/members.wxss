page {
    background-color: #f2f2f2;
}

.list {
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 126rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: transparent;
}

.member {
    width: 210rpx;
    margin-bottom: 30rpx;
    background-color: #fafafa;
    border-radius: 10rpx;
    overflow: hidden;
}

.pic-wrap {
    width: 100%;
    height: 316rpx;
    background-color: #fafafa;
}

.pic-wrap image {
    width: 100%;
    height: 100%;
}

.info {
    width: 100%;
    height: 58rpx;
    font-size: 24rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 12rpx;
    box-sizing: border-box;
}

.info image {
    width: 34rpx;
    height: 34rpx;
    background-color: #ffda44;
    margin-right: 8rpx;
    border-radius: 50%;
}

.info view {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.btn {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #ffda44;
    color: #333;
    font-size: 32rpx;
    z-index: 1;
}

.disabled {
    color: #aaa!important;
    background: #ddd!important;
}