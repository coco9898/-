.container {
    height: 100%;
}

.preview {
    width: 100%;
    height: 400rpx;
    text-align: center;
    background-color: #fff;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.preview image {
    max-height: 360rpx;
}

.preview .copyright {
    position: absolute;
    left: 0;
    top: 30rpx;
    width: 116rpx;
    height: 72rpx;
    max-height: auto;
}

.pagination {
    position: relative;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #666;
}

.pagination image {
    width: 12rpx;
    height: 12rpx;
    vertical-align: middle;
}

.prev,.next,.count {
    position: absolute;
}

.pagination .prev {
    left: 50rpx;
}

.pagination .next {
    right: 50rpx;
}

.pagination .count {
    color: #ccc;
    text-align: center;
    left: 200rpx;
    right: 200rpx;
}

.pagination text {
    vertical-align: middle;
    margin: 0 10rpx;
}

.hover {
    color: #999;
}

.section {
    margin-top: 30rpx;
}

.titlebar {
    display: flex;
    border: none;
    color: #222;
    font-size: 34rpx;
    text-indent: 0;
    padding: 20rpx 0;
    margin: 0 20rpx;
    position: relative;
}

.titlebar .title {
    flex: 1;
    padding-left: 46rpx;
}

.section-related .title {
    background: url('data:image/png;base64,') no-repeat 0 50% / 36rpx;
    background-size: 34rpx 34rpx;
}

.pic image {
    width: 223rpx;
    height: 223rpx;
}

.detail-share {
    width: 100%;
    display: flex;
    height: 248rpx;
    position: relative;
    flex-wrap: wrap;
}

.ds-space {
    width: 100%;
    height: 20rpx;
}

.ds-content {
    width: 25%;
    height: 50%;
    box-sizing: border-box;
    border-top: 1rpx solid #EDEDED;
    border-right: 1rpx solid #EDEDED;
    text-align: center;
    position: relative;
}

.icons {
    margin: 24rpx auto 0;
    width: 48rpx;
    height: 54rpx;
}

.ds-text {
    font-size: 24rpx;
    color: #666666;
    margin: -12rpx auto;
}

.ds-sharebtn {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    opacity: 0;
    width: 100%;
    height: 100%;
}

.first-cover {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    z-index: 250;
}

.lock-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    z-index: 700;
}

.loading-pic {
    width: 360rpx;
    height: 180rpx;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}