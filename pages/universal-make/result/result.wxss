view {
    background-color: transparent;
}

.main-img {
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 0;
}

.main-img image {
    width: 100%;
    height: 404rpx;
}

.btn-wrap {
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.btn-content {
    display: flex;
    height: 88rpx;
    width: 100%;
    justify-content: space-between;
}

.btn {
    width: 344rpx;
    color: #333;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    height: 88rpx;
    border-radius: 10rpx;
    position: relative;
}

.btn image {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.wx-share {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
}