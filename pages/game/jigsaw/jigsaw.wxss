.score-area {
    padding: 20rpx;
}

.jigsaw-game-area {
    margin: 0 auto;
    width: 600rpx;
    height: 600rpx;
    border: 1px solid #ffda44;
}

.jigsaw-game-item {
    border: 1px solid #ffda44;
    height: 100%;
}

.upload-btn {
    position: relative;
    width: 142rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #fff;
    font-size: 30rpx;
}

.upload-btn text {
    vertical-align: middle;
    padding-left: 8rpx;
}

.upload-btn image {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}

.jigsaw-canvas {
    position: absolute;
    left: -99999rpx;
    width: 600rpx;
    height: 600rpx;
}

.operation-area,.view-btn {
    margin: 20rpx;
}

.operation-area .btn+.btn,.view-btn .btn+.btn {
    margin-left: 20rpx;
}

.btn {
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
}

.modal-block {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
}

.modal-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    width: 600rpx;
    height: 600rpx;
}

.btn.disabled {
    background: #ddd;
}