view {
    background: transparent;
}

.fansub-list-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    bottom: 0;
}

.fansub-list-wrapper .inner {
    display: flex;
    flex-wrap: wrap;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.fansub-list-wrapper .item {
    width: 50%;
    padding: 20rpx 10rpx 0;
    box-sizing: border-box;
}

.fansub-list-wrapper .item .inner image {
    height: 230rpx;
    width: 100%;
    border-radius: 10rpx;
}

.fansub-list-wrapper .item .inner .tit {
    line-height: 74rpx;
    text-align: center;
    color: #4A4A4A;
    font-size: 32rpx;
}