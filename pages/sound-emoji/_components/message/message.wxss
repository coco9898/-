.flex {
    display: flex;
    align-items: stretch;
}

.flex-middle {
    align-items: center;
}

.flex-item {
    flex: 0 0 auto;
}

.flex-item-1 {
    flex: 1;
}

.detail-record-info {
    padding: 30rpx;
    background: #fff;
}

.detail-text.detail-record-info {
    padding: 0 0 0 30rpx;
}

.detail-text .detail-avatar-img {
    margin-top: 30rpx;
    width: 64rpx;
    height: 64rpx;
}

.detail-content-section {
    padding: 30rpx 30rpx 30rpx 0;
}

.detail-avatar-img {
    margin-right: 20rpx;
    width: 88rpx;
    height: 88rpx;
    border: 1px solid #ddd;
}

.detail-username {
    margin-bottom: 8rpx;
    font-size: 32rpx;
    line-height: 44rpx;
}

.detail-createtime {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #ccc;
}

.detail-bubble {
    position: relative;
    width: 332rpx;
    height: 76rpx;
}

.detail-bubble image {
    width: 100%;
}

.detail-buttle-info {
    position: absolute;
    font-size: 28rpx;
    color: #ccc;
    line-height: 1;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.detail-content {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999;
}

.voice {
    display: flex;
    height: 72rpx;
}

.voice .lt {
    width: 20rpx;
}

.voice .main {
    background-position: -20rpx 0;
    display: flex;
    align-items: center;
}

.voice .rt {
    width: 20rpx;
    background-position: -349rpx 0;
}

.voice view {
    background-size: auto 100%;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
}

.voice .main .playing {
    margin-left: 10rpx;
    height: 30rpx;
    width: 30rpx;
    background-size: 100% 100%;
    background-image: url(data:image/gif;base64,);
}

.dur {
    line-height: 76rpx;
    font-size: 28rpx;
    color: #999;
    margin-left: 10rpx;
}