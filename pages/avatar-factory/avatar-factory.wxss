.page {
    height: 100%;
}

view {
    background: #f4f4f4;
}

.avatar-block {
    position: relative;
    height: 570rpx;
    background: #fff;
    overflow: hidden;
}

.avatar-img {
    display: block;
    margin: 0 auto;
    width: 570rpx;
    height: 570rpx;
}

.avatar-header-area {
    position: absolute;
    top: -80rpx;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 730rpx;
    height: 730rpx;
}

.avatar-header-move {
    width: 200rpx;
    height: 120rpx;
}

.avatar-header-operation {
    position: relative;
    width: 200rpx;
    height: 120rpx;
    border: 1px solid #fff;
    box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
    background: transparent;
}

.avatar-header-rotate {
    position: absolute;
    bottom: -30rpx;
    right: -30rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #fff;
}

.avatar-header-rotate-icon {
    margin: 12rpx;
    width: 36rpx;
    height: 36rpx;
}

.avatar-header {
    width: 200rpx;
    height: 200rpx;
}

.selection-block {
    padding: 0 20rpx 70rpx;
    background: #f4f4f4;
    overflow: hidden;
}

.selection-content {
    font-size: 32rpx;
    line-height: 44rpx;
}

.selection-content-icon {
    margin-right: 10rpx;
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}

.flex-item-1 {
    height: 350rpx;
}

.selection-scroll-area {
    height: 100%;
}

.selection-item-container {
    margin: 0 -10rpx;
}

.selection-item {
    float: left;
    margin: 10rpx;
    width: 126rpx;
    font-size: 28rpx;
    text-align: center;
    color: #999;
}

.selection-item.active {
    color: #333;
}

.selection-item-material {
    box-sizing: border-box;
    margin-bottom: 4rpx;
    display: block;
    width: 126rpx;
    height: 126rpx;
    background: #fff;
    border: 4rpx solid #fff;
    border-radius: 10rpx;
}

.selection-item-material.active {
    border-color: #ffda44;
}

.operation-block {
    height: 108rpx;
    padding: 0 20rpx;
    background: #f4f4f4;
}

.operation-btn {
    font-size: 32rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    background: #fff;
}

.operation-btn+.operation-btn {
    margin-left: 20rpx;
}

.operation-btn-icon {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.postar-canvas {
    position: absolute;
    left: -9999px;
    width: 2250rpx;
    height: 3148rpx;
}

.avatar-canvas {
    position: absolute;
    left: -9999px;
    width: 570rpx;
    height: 570rpx;
}

.authorize-btn {
    position: absolute;
    width: 50%;
    opacity: 0;
    bottom: 0;
    right: 0;
    height: 108rpx;
    z-index: 9999;
}

.upload-btn {
    position: absolute;
    right: 100rpx;
    bottom: 100rpx;
    width: 142rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #fff;
    font-size: 30rpx;
}

.upload-btn text {
    vertical-align: middle;
    padding-left: 8rpx;
}

.upload-btn image {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}

.scroll-note {
    margin: 20rpx 0 14rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
}