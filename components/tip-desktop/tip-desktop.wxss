.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    z-index: 10010;
    box-sizing: border-box;
}

.content {
    width: 564rpx;
    margin: 20rpx auto;
    background: transparent;
}

.content image {
    width: 100%;
    height: 486rpx;
}

.content>view {
    width: 100%;
    height: 668rpx;
    border-radius: 10rpx;
    padding-top: 394rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #222;
    margin: -362rpx auto;
}

.content>view .tip {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.content>view .tip image {
    width: 88rpx;
    height: 64rpx;
    margin: 10rpx;
}

.content>view .btn {
    width: 244rpx;
    height: 84rpx;
    background-color: #ffda44;
    border-radius: 200rpx;
    text-align: center;
    line-height: 84rpx;
    margin: 28rpx auto;
}