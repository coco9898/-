.list-emoji {
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    padding: 30rpx 0 0;
    margin: 30rpx auto;
    width: 710rpx;
    position: relative;
    margin-top: 0rpx;
}

.list-emoji__info {
    font-size: 12px;
    margin: 0 0 12rpx 30rpx;
    background-color: #fff;
}

.list-emoji__info--name {
    font-size: 28rpx;
    color: #222;
    height: 40rpx;
    line-height: 40rpx;
}

.list-emoji__info--count {
    color: #ffda44;
    height: 34rpx;
    vertical-align: top;
    margin-left: 6rpx;
    display: inline-block;
}

.list-emoji__info--summary {
    color: #9b9b9b;
}

.list-emoji__gif {
    width: auto;
    padding: 14rpx 30rpx 30rpx;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    justify-content: space-between;
    position: relative;
    border-radius: 10rpx;
}

.list-emoji__gif .gif-wrap {
    width: 114rpx;
    height: 114rpx;
}

.list-emoji__gif image {
    width: 100%;
    height: 100%;
}

.mask {
    position: absolute;
    right: 30rpx;
    top: 14rpx;
    background: rgba(0,0,0,0.3);
    font-size: 36rpx;
    text-align: center;
    line-height: 114rpx;
    color: white;
}

.list-emoji .btn-view {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #222;
    text-align: center;
    position: relative;
}

.lazyload:nth-child(6n+1) image {
    background-color: #FFB8AE;
}

.lazyload:nth-child(6n+2) image {
    background-color: #B6EFFF;
}

.lazyload:nth-child(6n+3) image {
    background-color: #FFD8A2;
}

.lazyload:nth-child(6n+4) image {
    background-color: #EACCFF;
}

.lazyload:nth-child(6n+5) image {
    background-color: #CCD4FF;
}

.lazyload:nth-child(6n+6) image {
    background-color: #BCFFDA;
}

.one-px-t:before {
    content: "";
    height: 1px;
    left: 0;
    top: 0;
    width: 100%;
    transform: scaleY(0.4);
    box-sizing: border-box;
    pointer-events: none;
    background: #eee;
    position: absolute;
    z-index: 1;
}

.lock {
    position: absolute;
    top: 0;
    right: 0;
    width: 72rpx;
    height: 72rpx;
    background: url('data:image/png;base64,') no-repeat;
    background-size: 100% 100%;
    background-position: 0 0;
}

.list-emoji__gif .placeholder {
    height: 0rpx;
}